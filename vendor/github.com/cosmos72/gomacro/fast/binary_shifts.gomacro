	} else if yc {
		x := xe.Fun
		y := ye.Value
		if isLiteralNumber(y, 0) {
			return xe
		}
		yv := r.ValueOf(y)
		{shiftss; token.SHR; false; true; {int; uint}; {uint}}
	} else {
		xv := r.ValueOf(xe.Value)
		y := ye.Fun
